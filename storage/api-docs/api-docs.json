                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "title": {
                                                "type": "string",
                                                "example": "Example Title"
                                            },
                                            "text": {
                                                "type": "string",
                                                "example": "Example text for the identidade."
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
